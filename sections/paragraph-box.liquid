{% assign cta = section.blocks | where: "type", "cta" | first %}

<section id="{{ section.id }}"
         class="paragraph-box section-container spacing-{{ section.settings.container_spacing }}">
  <div class="page-boundary">
    <li class="multicolumn-card
          {% if section.settings.column_alignment == 'center' %} center{% endif %}
          {% if section.settings.column_size == 'large' %} large{% endif %}
          {% if section.settings.horizontal_layout_on_mobile %} horizontal-layout-on-mobile{% endif %}
        ">

      <h2 class="heading-2">{{ section.settings.title }}</h2>
      <p class="lead-statement">
        {{ section.settings.content | remove: "<p>" | remove: "</p>" }}
      </p>
      {% if cta != blank %}
        <a class="btn w-full md:w-auto" href="{{ cta.settings.url }}">
          {{ cta.settings.text }}
        </a>
      {% endif %}
    </li>
  </div>
</section>

{% schema %}

{
  "name": "Paragraph Box",
  "blocks": [
    {
      "type": "cta",
      "name": "CTA",
      "limit": 1,
      "settings": [
        {
          "id": "url",
          "type": "url",
          "label": "Button Url"
        },
        {
          "id": "text",
          "type": "text",
          "label": "Button Text"
        },
        {
          "id": "subtext",
          "type": "text",
          "label": "Subtext"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "id": "content",
      "type": "richtext",
      "label": "Content"
    },
    {
      "type": "select",
      "id": "column_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.multicolumn.settings.column_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.multicolumn.settings.column_alignment.options__2.label"
        }
      ],
      "default": "left",
      "label": "t:sections.multicolumn.settings.column_alignment.label"
    },
    {
      "type": "select",
      "id": "column_size",
      "options": [
        {
          "value": "medium",
          "label": "t:sections.image-with-text.settings.height.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.image-with-text.settings.height.options__3.label"
        }
      ],
      "default": "medium",
      "label": "t:sections.image-with-text.settings.height.label"
    },
    {
      "type": "select",
      "id": "container_spacing",
      "options": [
        {
          "value": "lg",
          "label": "Large (60px)"
        },
        {
          "value": "md",
          "label": "Medium (40px)"
        }
      ],
      "default": "md",
      "label": "Container Spacing"
    },
    {
      "type": "checkbox",
      "id": "horizontal_layout_on_mobile",
      "label": "Horizontal Layout on Mobile"
    },
    {
      "type": "checkbox",
      "id": "solid_typo",
      "label": "Solid Typography",
      "default": false
    }
  ]
}

{% endschema %}
