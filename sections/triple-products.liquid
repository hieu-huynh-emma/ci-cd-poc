<style>
  .triple-product-section {
    padding: 1rem;
  }

  .triple-product-section h2 {
    font-family: "Tiempos", Times, serif;
    font-size: 31px;
    color: #2E2F3C;
    text-align: center;
    margin-bottom: 20px;
  }

  .product {
    height: 24rem;
    margin-bottom: 1rem;
    border-radius: 8px;
    display: flex;
    flex-flow: column;
    justify-content: space-between;
    align-items: center;
    padding: 20px 12px 12px;
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
  }

  .product.first {
    background-image: url("{{ section.settings.background_image_1.src | image_url }}");
    background-color: {{ section.settings.background_color_1 }};
  }

  .product.second {
    background-image: url("{{ section.settings.background_image_2.src | image_url }}");
    background-color: {{ section.settings.background_color_2 }};
  }

  .product.third {
    background-image: url("{{ section.settings.background_image_3.src | image_url }}");
    background-color: {{ section.settings.background_color_3 }};
  }

  .product.fourth {
    background-image: url("{{ section.settings.background_image_4.src | image_url }}");
    background-color: {{ section.settings.background_color_4 }};
  }

  .product-content {
    padding: 0 1rem;
    display: flex;
    flex-flow: column;
    justify-content: center;
    align-items: center;
  }

  .product-content h3 {
    font-family: "Tiempos", Times, serif;
    font-size: 24px;
    margin-top: 10px;
    text-align: center;
  }

  .product-content .badge {
    background: #196956;
    border-radius: 4px;
    padding: 5px 8px 3px;
    color: white;
    font-weight: 700;
    font-size: 13px;
    line-height: 20px;
    display: flex;
    align-items: center;
    width: max-content;
  }

  .product-url-cta {
    width: 100%;
  }

  .product-content .desc {
    color: #595959;
    font-weight: 400;
    font-size: 14px;
    line-height: 150%;
    text-align: center;
  }

  .product-content .product-price {
    font-size: 14px;
    font-weight: 600;
  }

  .product-price .sale-price {
    font-weight: 400;
  }

  @media(min-width: 769px) {
    .triple-product-section {
      padding-top: 1rem;
      max-width: 1440px;
      margin: 0 auto;
    }

    .triple-product-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      max-width: 1090px;
      margin: 0 auto;
    }

    .product {
      margin: 12px 8px;
      padding: 30px;
      align-items: flex-start;
    }

    .product.first {
      width: 100%;
      background-image: url("{{ section.settings.background_image_desktop_1.src | image_url }}");
    }

    .product.second {
      width: 100%;
      background-image: url("{{ section.settings.background_image_desktop_2.src | image_url }}");
    }

    .product.third {
      width: 100%;
      background-image: url("{{ section.settings.background_image_desktop_3.src | image_url }}");
    }

    .product.fourth {
      width: 100%;
      background-image: url("{{ section.settings.background_image_desktop_4.src | image_url }}");
    }

    .product.second,
    .product.third,
    .product.fourth {
      width: 48%;
      max-width: 33rem;
    }

    .product-content {
      align-items: flex-start;
    }

    .product-content h3 {
      font-size: 28px;
      text-align: start;
    }

    .product-content .desc,
    .product-content .product-price {
      font-size: 16px;
    }

    .product-content .desc {
      margin-top: 10px;
      text-align: start;
    }

    .product-content .product-price {
      margin-top: 6px;
    }

    .product-url-cta {
      width: max-content;
    }
  }

</style>
<section class="triple-product-section">
  <div>
    {% if section.settings.title %}
    <h2>{{ section.settings.title }}
    </h2>
    {% endif %}
    <div class="triple-product-container">
      <div class="product first">
        <div class="product-content">
          {% if section.settings.badge_1 != blank %}
          <span class="badge">{{section.settings.badge_1}}
          </span>
          {% endif %}
          <h3>
            {% if section.settings.product_title_1 != blank%}
