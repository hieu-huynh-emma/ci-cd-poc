<div class="supported-payment-methods" style="display: none">
    <div class="sp-left-text">{% if request.locale.iso_code == 'fr' %}{{section.settings.supported_payment_left_text_fr}}{% else %}{{section.settings.supported_payment_left_text}}{% endif %}</div>
    <div class="sp-image">
      <img src="{{section.settings.supported_payment_image | image_url: width :600 }}" />
    </div>
    <div class="sp-right-text">{% if request.locale.iso_code == 'fr' %}{{section.settings.supported_payment_right_text_fr}}{% else %}{{section.settings.supported_payment_right_text}}{% endif %}</div>
  </div>
  <style>
    .supported-payment-methods {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      margin-top: 10px;
    }
    .supported-payment-methods .sp-left-text,
    .supported-payment-methods .sp-right-text {
      width: 20%;
      color: #333;
      font-size: 1em;
      font-weight: 500;
    }
    .supported-payment-methods .sp-left-text {
      text-align: right;
      padding-right: 10px;
    }
    .supported-payment-methods .sp-right-text {
      text-align: left;
      padding-left: 10px;
    }
    .supported-payment-methods .sp-image {
      width: 60%;
    }
  </style>
  <script>
    $(document).ready(function(){
      if (Shopify.Checkout.step === 'contact_information') {
        $('.dynamic-checkout').after($('#shopify-section-checkout-supported-payment-methods'));
        $('#shopify-section-checkout-supported-payment-methods .supported-payment-methods').show();
      }
    });
  </script>
  {% schema %}
  {
  "name": "Supported Payment Methods",
    "settings": [
      {
        "type": "image_picker",
        "id": "supported_payment_image",
        "label": "Supported payment method image"
      },
      {
        "type": "header",
        "content": "English"
      },
      {
        "type": "text",
        "id": "supported_payment_left_text",
        "label": "Supported payment method left text",
        "default": "We accept"
      },
      {
        "type": "text",
        "id": "supported_payment_right_text",
        "label": "Supported payment method right text",
        "default": "at payment"
      },
      {
        "type": "header",
        "content": "French"
      },
      {
        "type": "text",
        "id": "supported_payment_left_text_fr",
        "label": "Supported payment method left text",
        "default": "Nous acceptons"
      },
      {
        "type": "text",
        "id": "supported_payment_right_text_fr",
        "label": "Supported payment method right text",
        "default": "au paiement"
      }
    ]
  }
  {% endschema %}
  