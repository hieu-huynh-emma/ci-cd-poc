<section id="about-us-cta-section" class="about-us-left-column hidden hidden">
  <div class="py-4">
    <div class="bg-[#F0F0F5] px-5 py-9 text-center mb-12">
      <h5 class="text-[33px] mb-4">{{ section.settings.heading }}</h5>
      <p class="mb-8">{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.cta_button_link }}" class="btn max-w-max mx-auto">{{ section.settings.cta_button_text }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Us CTA",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "CTA Button Text"
    },
    {
      "type": "url",
      "id": "cta_button_link",
      "label": "CTA Button Link"
    }
  ]
}
{% endschema %}