<section id="financing-affirm-benefit-section">
  <div class="mx-auto max-w-7xl px-4 py-10 md:py-12 text-center sm:px-6 md:px-8">
    <div class="md:flex md:gap-4 items-center justify-between">
      {% for block in section.blocks %}
        <div class="{% if forloop.last != true %}mb-14 md:mb-0{% endif %}">
          <img class="mb-4 w-1/3 mx-auto w-24 h-24" src="{{ block.settings.image | img_url }}">
          <h3 class="text-center text-[#3c4196] text-[22px] md:text-[25px] mb-1">{{ block.settings.heading }}</h3>
          <p class="text-center">{{ block.settings.subheading }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Financing Affirm Benefit",
  "blocks": [
    {
      "type": "affirm-benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        }
      ]
    }
  ]
}
{% endschema %}