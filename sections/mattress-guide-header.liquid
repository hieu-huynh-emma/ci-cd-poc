<style>
  #mattress-guide-header-section .mattress-guide-bg {
    min-height: 150px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #3c4196;
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: scroll;
    background-image: url({{ section.settings.image | img_url: "original" }});
    background-position: center top;
  }
  @media (min-width: 768px) {
    #mattress-guide-header-section .mattress-guide-bg {
      background-position: center bottom;
    }
  }
</style>

<section id="mattress-guide-header-section">
  <div class="mattress-guide-bg">
    <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 md:px-8">
      <h1 class="text-[32px] lg:text-[36px] text-[#3c4196] uppercase text-center w-4/5 mx-auto my-5 sm:w-2/3 md:w-full md:m-0 md:mb-4">{{ section.settings.title }}</h1>
      <h2 class="text-[25px] lg:text-[32px] text-[#3c4196] text-center mb-1">{{ section.settings.subtitle }}</h2>
      <p class="text-center">{{ section.settings.content }}</p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Mattress Guide Header",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    }
  ]
}
{% endschema %}