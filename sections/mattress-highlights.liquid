<style>
 .mattress-layers-section {
  background-color: rgba(240, 240, 245, 0.5);
  width: 100%;
  padding: 1.5rem;
 }

 .mattress-layers-section h3 {
  text-align: center;
  font-family: 'Inter';
  font-style: normal;
  font-weight: 600;
  font-size: 14px;
  color: #55576F;
 }

 .mattress-layers-section h2 {
  font-family: 'Tiempos';
  font-style: normal;
  font-weight: 400;
  font-size: 26px;
  text-align: center;
 }

 .highlights-container {
  display: flex;
  flex-wrap: wrap;
  align-items: baseline;
 }

 .highlights-container .item {
  width: 100%;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 1rem;
 }

 .item h4 {
  font-family: 'Inter';
  font-weight: 600;
  font-size: 18px;
  color: #2E2F3C;
  margin: 1.2rem auto 0.5rem auto;
 }

 .item h5 {
  font-family: 'Inter';
  font-weight: 400;
  font-size: 12px;
  color: #595959;
 }

 .item img {
  border-radius: 10px;
  width: 100%;
  aspect-ratio: 3/2;
 }

 @media (min-width: 768px) {
  .highlight-section-wrapper {
   max-width: 1440px;
   margin: 0 auto;
  }

  .highlights-container .item {
   width: 25%;
  }
 }

</style>
<section class="mattress-layers-section">
 <div class="highlight-section-wrapper">
  <h3>{{ section.settings.subtitle }}</h3>
  <h2>{{ section.settings.title }}</h2>
  <div class="highlights-container">
   {% for block in section.blocks %}
   {% if block.type == 'highlight' %}
   <div class="item">
    <img src="{{ block.settings.image.src | img_url: 'medium'}}" />
    <h4 class="title">{{ block.settings.title }}</h4>
    <h5 class="description">{{ block.settings.description }}</h5>
   </div>
   {% endif %}
   {% endfor %}
  </div>
 </div>
</section>

{% schema %}
{
"name": "Mattress Highlight",
"blocks": [
{
"name": "Brand Highlight",
"type": "highlight",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "text",
"id": "title",
"label": "Title",
"default": "Emma's got your back"
},
{
"type": "text",
"id": "description",
"label": "Description",
"default": "Our trademarked foam layers distribute your weight optimally between your shoulders"
}
]
}
],
"settings": [
{
"type": "text",
"id": "title",
"label": "Title",
"default": "Love at first sleep"
},
{
"type": "text",
"id": "subtitle",
"label": "Subtitle",
"default": "THE EMMA DIFFERENCE"
}
]
}
{% endschema %}
