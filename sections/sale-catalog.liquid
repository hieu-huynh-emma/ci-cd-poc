{% assign catalogItems = section.blocks | where: 'type', 'catalog_item' %}

<section id="sale-catalog-section" class="section-container weglot-dynamic-content-translate spacing-{{ section.settings.container_spacing }}">
  <div class="section-chassis page-boundary">
    <smart-tabs class='material'>
      {% for collection in section.settings.sale_collection_list %}
        <smart-tab-item label="{{ collection.title }}">
          <div class="catalog-grid">
            {% for product in collection.products %}
              <a href="{{ product.url }}">
                {% render 'product-card', product: product, landscape: true %}
              </a>
            {% endfor %}
          </div>
        </smart-tab-item>
      {% endfor %}
    </smart-tabs>
  </div>
</section>

