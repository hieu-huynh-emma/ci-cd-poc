<style>
  #article-related-articles-section .related-article-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    grid-gap: 16px;
  }

  #article-related-articles-section a:hover .related-article-card__title {
    text-decoration: underline;
  }
</style>

<section id="article-related-articles-section" class="bg-[#fbf6f0]">
  <div class="mx-auto max-w-6xl px-4 py-8 sm:px-6 md:px-8">
    <h4 class="text-[30px] text-center mb-10">Related Articles</h4>
    <div class="related-article-cards">
      {% for block in section.blocks %}
        <a class="block" href="{{ block.settings.article.url }}">
          <img class="mb-3" src="{{ block.settings.article.image | img_url: 'master' }}" alt="">
          <p class="related-article-card__title block mb-4 font-bold">{{ block.settings.article.title }}</p>
          <p class="text-[14px]">{{ block.settings.article.updated_at  | date: "%B %d, %Y" }}</p>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Related Articles",
  "blocks": [
    {
      "name": "Articles",
      "type": "article",
      "settings": [
        {
          "type": "article",
          "id": "article",
          "label": "Article"
        }
      ]
    }
  ]
}
{% endschema %}