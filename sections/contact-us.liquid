<section id="ContactUsSection" class="section-container">
  <div class="page-boundary">
    <div class="bg-gradient-to-b from-athens-gray to-[#F6F6F9] rounded-[20px] py-10 px-7">
      <h2 class="text-[30px] text-center lg:text-[39px]">
        {{ section.settings.custom_title }}
      </h2>
      <p class="text-neutral-800 text-center lg:text-xl mt-3 lg:mt-6">Shop
        with our sleep experts today!
      </p>
      <div class="flex flex-col mt-2 lg:flex-row">
        <div class="flex mt-5 w-full lg:flex-wrap justify-center">
          <div class="mr-4 lg:mr-0 w-1/4 lg:w-fit"><img
              src="{{ 'chat-with-us.svg' | asset_url }}" height="60"
              width="60">
          </div>
          <div class="w-3/4 lg:w-full lg:text-center lg:mt-5">
            <h3 class="text-[24px] lg:text-2xl">Chat With Us</h3>
            <p
              class="text-comet lg:w-2/3 lg:mx-auto lg:mt-3 live-chat cursor-pointer"><span
                class="underline">Ask
                away</span>â€”we're
              here to
              answer all things
              sleep.</p>
          </div>
        </div>
        <div class="flex mt-5 w-full lg:flex-wrap justify-center">
          <div class="mr-4 lg:mr-0 w-1/4 lg:w-fit"><img
              src="{{ 'call-us.svg' | asset_url }}" height="60" width="60">
          </div>
          <div class="w-3/4 lg:w-full lg:text-center lg:mt-5">
            <h3 class="text-[24px] lg:text-2xl">Call us</h3>
            <p class="text-comet lg:w-2/3 lg:mx-auto lg:mt-3 mb-2">We'd love to hear from you.
              Call
              <a class="underline cursor-pointer" href="tel:+18885853662">1 (888) 585 EMMA.</a>
            </p>
            <p class="text-comet italic text-[13px]">Available from 08:00 to 18:00 GMT-6, Monday-Friday</p>
          </div>
        </div>
        <div class="flex mt-5 w-full lg:flex-wrap justify-center">
          <div class="mr-4 lg:mr-0 w-1/4 lg:w-fit"><img
              src="{{ 'email-us.svg' | asset_url }}" height="60" width="60">
          </div>
          <div class="w-3/4 lg:w-full lg:text-center lg:mt-5">
            <h3 class="text-[24px] lg:text-2xl">Email us</h3>
            <p class="text-comet lg:w-2/3 lg:mx-auto lg:mt-3">Drop us an <a
                class="underline cursor-pointer"
                href="mailto:support@emma-sleep.ca">email</a>
              and we'll respond in 24-48 hours.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  $(document).ready(function () {
    $('#ContactUsSection .live-chat').click(openChatSupport)
  })
</script>
{% schema %}
{
  "name": "Contact Us",
  "settings": [
    {
      "id": "custom_title",
      "type": "text",
      "label": "Title",
      "default": "Need help deciding?"
    }
  ],
  "presets": [
    {
      "name": "custom-title",
      "category": "Custom"
    }
  ]
}
{% endschema %}
