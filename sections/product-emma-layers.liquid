                    <img src="{{ section.settings.layers_left_image | img_url: 'master'}}" width="2048" height="1536" sizes="(min-width: 1536px) 1536px, (min-width: 1024px) 1280px, (min-width: 640px) 768px, 320px" loading="lazy">
                </div>
            </div>
            <div class="layers-right hidden md:block">
                <div class="p-2">
                    <h3><span class="text-xl text-blue-800">{{ section.settings.layers_right_heading_1_title }}</span></h3>
                    <p class="text-base">{{ section.settings.layers_right_heading_1_description }}</p>
                </div>
                <div class="p-2">
                    <h3><span class="text-xl text-blue-800">{{ section.settings.layers_right_heading_2_title }}</span></h3>
                    <p class="text-base">{{ section.settings.layers_right_heading_2_description }}</p>
                </div>
                <div class="p-2">
                    <h3><span class="text-xl text-blue-800">{{ section.settings.layers_right_heading_3_title }}</span></h3>
                    <p class="text-base">{{ section.settings.layers_right_heading_3_description }}</p>
                </div>
                <div class="p-2">
