                        <button class="tablinks inline-block py-3 px-4 rounded-lg" onclick="openLayer(event, 'tab5')">{{ section.settings.layers_right_mobile_heading_5 }}</button>
                    </li>
                    <li>
                      <button class="tablinks inline-block py-3 px-4 rounded-lg" onclick="openLayer(event, 'tab6')">{{ section.settings.layers_right_mobile_heading_6 }}</button>
                  </li>
                </ul>
            </div>
            <div class="tab-content-wrapper px-8 block md:hidden">
