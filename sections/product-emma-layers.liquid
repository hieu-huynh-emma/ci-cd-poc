                    <li class="mr-2">
                        <button id="defaultOpenLayer" class="tablinks inline-block py-3 px-4 rounded-lg activeTab" aria-current="page" onclick="openLayer(event, 'tab1')">{{ section.settings.layers_right_mobile_heading_1 }}</button>
                    </li>
                    <li class="mr-2">
                        <button class="tablinks inline-block py-3 px-4 rounded-lg" onclick="openLayer(event, 'tab2')">{{ section.settings.layers_right_mobile_heading_2 }}</button>
