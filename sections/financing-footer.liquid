<style>
  #financing-footer-section .financing-footer-background-image {
    background-image: linear-gradient(0deg, rgb(255 255 255 / 30%), rgb(255 255 255 / 30%)),
    url({{ section.settings.background_image | img_url: 'master' }});
    height: 65vh;
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
  }
  @media (min-width: 768px) {
    #financing-footer-section .financing-footer-background-image {
      background-position: right center;
    }
  }
</style>

<div id="financing-footer-section">
  <div class="financing-footer-background-image relative py-5 text-center">
    <div class="absolute left-1/2 top-1/2 w-full -translate-x-1/2 -translate-y-1/2">
      <div class="mx-auto max-w-7xl px-4 text-center sm:px-6 md:px-8">
        <h3 class="mb-8 text-center text-[33px] text-[#3c4196]">{{ section.settings.title }}</h3>
        <a href="{{ section.settings.link }}" target="_blank" class="btn btn--secondary mx-auto w-max">Shop Now</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Financing Footer",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Footer title"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Footer background image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Footer link"
    }
  ]
}
{% endschema %}