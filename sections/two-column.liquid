{% liquid
    assign settings = section.settings
%}

<container-block
    id="{{ settings.id }}"
    :settings="{% content_for "block", type: "container", id: "container" %}"
>
    <frame-block :settings="{% content_for "block", type: "frame", id: "frame" %}">
        {% content_for "block", type: "heading", id: "heading" %}

        <two-column-layout style="--split: {{ settings.split }};">
            {% content_for "block", type: "column", id: "column-left" %}
            {% content_for "block", type: "column", id: "column-right" %}
        </two-column-layout>
    </frame-block>
</container-block>


{% schema %}
{
  "name": "Two Column",
  "tag": "section",
  "blocks": [
    {
      "type": "heading"
    },
    {
      "type": "column"
    },
    {
      "type": "container"
    },
    {
      "type": "frame"
    }
  ],
  "settings": [
    {
      "id": "id",
      "label": "ID",
      "type": "text",
      "info": "The ID of the section"
    },
    {
      "id": "split",
      "label": "Split",
      "type": "range",
      "min": 20,
      "max": 80,
      "step": 1,
      "unit": "%",
      "default": 50,
      "info": "The percentage split of the two columns"
    }
  ],
  "presets": [
    {
      "name": "Two Column",
      "blocks": [
        {
          "type": "container",
          "id": "container",
          "static": true,
          "name": "Container",
          "settings": {
          },
          "blocks": {}
        },
        {
          "type": "frame",
          "id": "frame",
          "static": true,
          "name": "Frame",
          "settings": {
            "bgcolor": "#00000000",
            "spacing": "base",
            "margin_y": 0,
            "margin_x": 0,
            "padding_y": 10,
            "padding_x": 0,
            "border_radius": 0,
            "boundless": false,
            "content_width": 100
          },
          "blocks": {}
        },
        {
          "type": "heading",
          "id": "heading",
          "static": true,
          "name": "Heading",
          "settings": {
          },
          "blocks": {}
        },
        {
          "type": "column",
          "id": "column-left",
          "static": true,
          "name": "Column Left",
          "settings": {
          },
          "blocks": {}
        },
        {
          "type": "column",
          "id": "column-right",
          "static": true,
          "name": "Column Right",
          "settings": {},
          "blocks": {}
        }
      ]
    }
  ]
}
{% endschema %}
