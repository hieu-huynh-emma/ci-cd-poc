<style>
 .orders__list-item {
   display: block;
   text-align: right;
   padding: 4px 0;
   border: 0;
 }

 .orders__list-item a,
 .orders__list-item a:visited {
   font-size: 14px;
   text-decoration: underline;
   color: #3C4196;
 }

 .orders__list-item:before {
   content: attr(data-label);
   float: left;
   font-size: 14px;
   font-style: normal;
   font-weight: 400;
   padding-right: 10px;
 }

 @media (min-width: 768px) {
   .orders__list-item {
     display: table-cell;
     text-align: left;
     padding: 8px 0;
   }

   .orders__list-item:before {
     content: "";
   }
 }
</style>

{% paginate customer.orders by 20 %}
  <section class="section-container">
    <div class="page-boundary">
      <div class="text-center">
        <h1 class="text-[24px] font-semibold md:text-[40px] mb-4">{{ 'customer.account.title' | t }}</h1>
        {{ 'layout.customer.log_out' | t | customer_logout_link }}
      </div>
    </div>
  </section>

  <section class="section-container">
    <div class="page-boundary">
      <div class="md:flex">
        <div class="mb-4 md:mb-0 md:flex-1 md:mr-8">
          <h2 class="text-[24px] font-semibold mb-2 md:mb-4">{{ 'customer.orders.title' | t }}</h2>
          {% if customer.orders.size != 0 %}
            <div>
              <table class="w-full">
                <thead class="hidden md:table-header-group">
                  <tr class="md:text-left md:text-[16px]">
                    <th class="border-0 py-2 px-0">{{ 'customer.orders.order_number' | t }}</th>
                    <th class="border-0 py-2 px-0">{{ 'customer.orders.date' | t }}</th>
                    <th class="border-0 py-2 px-0">{{ 'customer.orders.payment_status' | t }}</th>
                    <th class="border-0 py-2 px-0">{{ 'customer.orders.fulfillment_status' | t }}</th>
                    <th class="border-0 py-2 px-0">{{ 'customer.orders.total' | t }}</th>
                  </tr>
                </thead>
                <tbody>
                  {% for order in customer.orders %}
                    <tr class="block mb-3 pb-3 border-b border-black md:table-row md:p-0 md:m-0 md:border-0">
                      <td class="orders__list-item" data-label="{{ 'customer.orders.order_number' | t }}">{{ order.name | link_to: order.customer_url }}</td>
                      <td class="orders__list-item" data-label="{{ 'customer.orders.date' | t }}">{{ order.created_at | date: format: 'date' }}</td>
                      <td class="orders__list-item" data-label="{{ 'customer.orders.payment_status' | t }}">{{ order.financial_status_label }}</td>
                      <td class="orders__list-item" data-label="{{ 'customer.orders.fulfillment_status' | t }}">{{ order.fulfillment_status_label }}</td>
                      <td class="orders__list-item" data-label="{{ 'customer.orders.total' | t }}">{{ order.total_price | money }}</td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <p>{{ 'customer.orders.none' | t }}</p>
          {% endif %}
        </div>

        <div>
          <h3 class="text-[24px] font-semibold mb-2 md:mb-5">{{ 'customer.account.details' | t }}</h3>
          {{ customer.default_address | format_address }}
          <p class="mt-3">
            <a class="underline color-[#3C4196]" href="{{ routes.account_addresses_url }}">{{ 'customer.account.view_addresses' | t }}({{ customer.addresses_count }})</a>
          </p>
        </div>
      </div>
    </div>
  </section>

  {% if paginate.pages > 1 %}
    {% include 'pagination' %}
  {% endif %}
{% endpaginate %}
