<cart-drawer id="CartDrawer" class="overflow-full">
    {% section 'cart-drawer-header' %}

    <div
        class="cart-drawer-inner overflow-full" role="dialog" aria-modal="true"
        aria-label="{{ 'sections.cart.title' | t }}"
        tabindex="-1"
    >
        <div class="cart-drawer-skeleton">
            <svg
                aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66"
                xmlns="http://www.w3.org/2000/svg"
            >
                <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
            </svg>
        </div>
        <div id="cart-drawer-empty-placeholder"></div>
        <cart-scrollable-content>
            {% render 'cart-drawer-banner' %}
{% comment %}{% endcomment %}
            {% comment %}<div abtasty-campaign-id="1411464" abtasty-campaign-variation="0">{% endcomment %}
                {% comment %}<div id="cart-drawer-items-placeholder"></div>{% endcomment %}
            {% comment %}</div>{% endcomment %}

            <div>
                <cart-drawer-lines></cart-drawer-lines>
            </div>

            <div id="cart-recommendation-placeholder"></div>

            <style>.cart-disclaimer {
                    padding: 0 1rem;
                }</style>
            {% render 'cart-disclaimer' %}
        </cart-scrollable-content>
    </div>

    {% render 'cart-drawer-footer' %}
</cart-drawer>
