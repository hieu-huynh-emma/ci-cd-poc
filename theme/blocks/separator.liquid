{% assign settings = block.settings %}

<separator-block
    style="display: inline-block; width: 100%; height: {{ settings.size }}px; background-color: {{ settings.color
    }}"></separator-block>

{% schema %}
{
  "name": "Separator",
  "tag": null,
  "settings": [
    {
      "id": "color",
      "type": "color",
      "label": "Color",
      "default": "#2E2F3C4C"
    },
    {
      "id": "size",
      "type": "range",
      "label": "Size",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "px",
      "default": 1,
      "info": "The height of the separator"
    }
  ],
  "presets": [
    {
      "name": "Separator",
      "settings": {
        "color": "#2E2F3C4C",
        "size": 1
      }
    }
  ]
}
{% endschema %}
