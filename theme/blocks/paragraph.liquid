{% assign settings = block.settings %}

{%- if settings.content != blank -%}
    <paragraph-block class="paragraph-block rtf-viewer" {{ block.shopify_attributes }}
         style="color: {{ settings.color }}; text-align: {{ settings.text_alignment }};">
        {{ settings.content }}
    </paragraph-block>
{%- endif -%}

{% schema %}
{
  "name": "Paragraph",
  "tag": null,
  "settings": [
    {
      "type": "richtext",
      "id": "content",
      "label": "Paragraph Content",
      "default": "<p>Paragraph Content</p>"
    },
    {
      "id": "color",
      "type": "color",
      "label": "Paragraph Color",
      "default": "#2e2f3c"
    },
    {
      "type": "select",
      "id": "size",
      "label": "Paragraph Size",
      "options": [
        {
          "value": "xs",
          "label": "Extra Small (xs)"
        },
        {
          "value": "sm",
          "label": "Small (sm)"
        },
        {
          "value": "base",
          "label": "Base"
        },
        {
          "value": "md",
          "label": "Medium (md)"
        },
        {
          "value": "lg",
          "label": "Large (lg)"
        }
      ],
      "default": "base",
      "info": "Choose the font size for the paragraph."
    },
    {
      "id": "text_alignment",
      "type": "text_alignment",
      "label": "Text alignment",
      "default": "center"
    }
  ],
  "presets": [
    {
      "name": "Paragraph",
      "settings": {
        "content": "<p>Paragraph Content</p>",
        "size": "base"
      }
    }
  ]
}
{% endschema %}
