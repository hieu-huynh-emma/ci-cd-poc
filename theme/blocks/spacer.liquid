{% liquid
    assign settings = block.settings
%}

<spacer-block
    style="
        display: inline-block;
        height: {{ section.settings.gap_size }}px;
        "
></spacer-block>

{% schema %}
{
  "name": "Spacer",
  "tag": null,
  "settings": [
    {
      "id": "size",
      "type": "range",
      "label": "Size",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 4,
      "info": "The spacing between content, 1 unit = 4px"
    }
  ],
  "presets": [
    {
      "name": "Spacer",
      "settings": {
        "size": 4
      }
    }
  ]
}
{% endschema %}
