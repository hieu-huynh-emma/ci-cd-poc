{% assign settings = block.settings %}

{%- if settings.content != blank -%}
    <text-block {{ block.shopify_attributes }}
        class="text-{{ settings.size }}"
        style="color: {{ settings.color }}; text-align: {{ settings.text_alignment }};">
        {{ settings.content }}
    </text-block>
{%- endif -%}

{% schema %}
{
  "name": "Text",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "content",
      "label": "Text Content",
      "default": "Text Content"
    },
    {
      "id": "color",
      "type": "color",
      "label": "Text Color",
      "default": "#2e2f3c"
    },
    {
      "type": "select",
      "id": "size",
      "label": "Text Size",
      "options": [
        {
          "value": "xs",
          "label": "Extra Small (12px)"
        },
        {
          "value": "sm",
          "label": "Small (14px)"
        },
        {
          "value": "base",
          "label": "Base (16px)"
        },
        {
          "value": "md",
          "label": "Medium (20px)"
        },
        {
          "value": "lg",
          "label": "Large (24px)"
        },
        {
          "value": "xl",
          "label": "Extra Large (32px)"
        },
        {
          "value": "xxl",
          "label": "Extra extra Large (40px)"
        }
      ],
      "default": "base",
      "info": "Choose the font size for the text."
    },
    {
      "id": "text_alignment",
      "type": "text_alignment",
      "label": "Text alignment",
      "default": "center"
    }
  ],
  "presets": [
    {
      "name": "Text",
      "settings": {
        "content": "Text Content",
        "color": "#2e2f3c",
        "size": "base"
      }
    }
  ]
}
{% endschema %}
