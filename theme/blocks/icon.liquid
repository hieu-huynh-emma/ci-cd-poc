{% liquid
  assign settings = block.settings
%}
<icon-block>
  <svg-tag
      :src="{{ settings.src | image_url }}"
      :width="{{ settings.size }}"
      :height="{{ settings.size }}"
      :placeholderWidth="100"
  >
  </svg-tag>
</icon-block>

{% schema %}
{
  "name": "Icon",
  "tag": null,
  "settings": [
    {
      "id": "src",
      "type": "image_picker",
      "label": "Icon Source"
    },
    {
      "id": "size",
      "type": "number",
      "default": 100,
      "label": "Icon Size"
    }
  ],
  "presets": [
    {
      "name": "Icon",
      "settings": {
        "src": ""
      }
    }
  ]
}
{% endschema %}
