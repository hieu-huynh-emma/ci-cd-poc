<script id="CartRecommendation-JSON" type="application/json">
    [
    {% for product in section.settings.collection.products %}
        {{ product | json }}
        {% unless forloop.last %},{% endunless %}
    {% endfor %}
    ]
</script>
<script id="CartItems-JSON" type="application/json">
    [
    {% for lineItem in cart.items %}
        {{ lineItem | json }}
        {% unless forloop.last %},{% endunless %}
    {% endfor %}
    ]
</script>

<cart-recommendation :heading="{{ section.settings.heading }}"></cart-recommendation>

{% schema %}
{
  "name": "Cart Recommendation",
  "limit": 1,
  "settings": [
    {
      "id": "heading",
      "type": "text",
      "label": "Heading",
      "default": "Others also bought"
    },
    {
      "id": "heading_alignment",
      "type": "select",
      "label": "Heading Alignment",
      "options": [
        {
          "value": "start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "Right"
        }
      ],
      "default": "start"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Cart Recommendation Collection"
    }
  ]
}
{% endschema %}
