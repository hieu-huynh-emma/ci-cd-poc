{% liquid
    assign settings = section.settings
%}

<container-block
    :settings="{% content_for "block", type: "container", id: "container" %}"
>
    <frame-block :settings="{% content_for "block", type: "frame", id: "frame" %}">
        {% content_for "block", type: "heading", id: "heading" %}

        <multicolumn-section>
            {% content_for 'blocks' %}
        </multicolumn-section>
    </frame-block>
</container-block>


{% schema %}
{
  "name": "Multicolumn",
  "tag": "section",
  "blocks": [
    {
      "type": "heading"
    },
    {
      "type": "column"
    },
    {
      "type": "container"
    },
    {
      "type": "frame"
    },
    {
      "type": "list-column"
    },
    {
      "type": "media-column"
    }
  ],
  "settings": [
  ],
  "presets": [
    {
      "name": "Multicolumn",
      "blocks": [
        {
          "type": "container",
          "id": "container",
          "static": true,
          "name": "Container",
          "settings": {
          },
          "blocks": {}
        },
        {
          "type": "frame",
          "id": "frame",
          "static": true,
          "name": "Frame",
          "settings": {
            "bgcolor": "#00000000",
            "spacing": "base",
            "margin_y": 0,
            "margin_x": 0,
            "padding_y": 10,
            "padding_x": 0,

            "border_radius": 0,
            "boundless": false,
            "content_width": 100
          },
          "blocks": {}
        },
        {
          "type": "heading",
          "id": "heading",
          "static": true,
          "name": "Heading",
          "settings": {
          },
          "blocks": {}
        }
      ]
    }
  ]
}
{% endschema %}
