<div class="emma-accordion">
    {% for block in section.blocks %}
        <div class="accordion">
            <div class="accordion__header">
                {{ block.settings.question }}
            </div>
            <div class="accordion__content">
                <p>{{ block.settings.answer }}</p>
            </div>
        </div>
    {% endfor %}
</div>

<script type="quickscript" loading="delayed" src="{{ 'product-accordion.js' | asset_url }}"></script>

{% schema %}
{
  "name": "Accordion",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Question",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Add custom text below",
          "default": "<p>Add your text here</p>"
        }
      ]
    }
  ]
}
{% endschema %}
