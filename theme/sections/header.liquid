      "info": "Please visit the respective Accentuate Url of each product below to update its cover image and discount badge"
    },
    {
      "type": "checkbox",
      "id": "enable_sticky_header",
      "default": false,
      "label": "t:sections.header.settings.enable_sticky_header.label",
      "info": "t:sections.header.settings.enable_sticky_header.info"
    },
    {
      "id": "show_sale_link",
      "type": "checkbox",
      "label": "Show Sale Link",
      "default": false
    },
    {
      "id": "sale_page_url",
      "type": "url",
      "label": "Sale Page URL"
    },
    {
      "type": "header",
      "content": "Main Navigation Menu",
      "info": "Please visit this [url](https://emma-sleep-ca.myshopify.com/admin/menus/190218862755) to update the site navigation menu"
    }
  ]
}
{% endschema %}
