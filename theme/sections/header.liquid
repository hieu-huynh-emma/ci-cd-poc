        <a href="{{ routes.root_url }}" class="site-logo">
            {{ section.settings.logo | image_url: height: 100 | image_tag: style: 'height: 24px; width: 135px' }}
        </a>


        <div class="small_nav">
            <tracked-button :trackId="Language_Picker" tabindex="-1" class="language-redirection"></tracked-button>

            <tracked-button :trackId="FAQ_HP" href="https://emma-sleep.ca/pages/frequently-asked-questions-2">FAQ</tracked-button>
            <div class="custom_dropdown">
                <tracked-button :trackId="Compare_other_HP" href="/collections/mattresses" class="dropdown_btn">
                    Compare
                </tracked-button>
                <ul class="minimal-site-subnav">

                    <li class="site-subnav__item site-nav--active">
                        <a href="/pages/emma-vs-endy" class="site-subnav__link" aria-current="page" tabindex="-1">
                            Emma vs Endy
                        </a>
                    </li>

                    <li class="site-subnav__item">
                        <a href="/pages/emma-vs-casper" class="site-subnav__link" tabindex="-1">
                            Emma vs Casper
                        </a>
                    </li>

                    <li class="site-subnav__item">
                        <a href="/pages/emma-vs-douglas" class="site-subnav__link" tabindex="-1">
                            Emma vs Douglas
                        </a>
                    </li>
                </ul>
            </div>

        </div>
        {% render 'header-utilities' %}
    </div>
</header>

<div class="main_nav_wrapper">
    {% render 'main-navigation' %}
</div>


{% schema %}
{
  "name": "t:sections.header.name",
  "class": "site-header-wrapper",
  "settings": [
