<section id="multimedia-showcase-section">
  <div class="page-boundary">
    {% for block in section.blocks %}
      <div class="section-container">
        {% assign settings = block.settings %}

        {% render 'media-with-text', settings: settings, mediaType: block.type, mediaSource: settings.source %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Multimedia Showcase",
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "id": "source",
          "type": "image_picker",
          "label": "Image or GIF"
        },
        {
          "id": "heading",
          "type": "text",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        },
        {
          "id": "inverted",
          "type": "checkbox",
          "label": "Inverted?"
        },
        {
          "id": "cta_url",
          "type": "url",
          "label": "Button Url"
        },
        {
          "id": "cta_text",
          "type": "text",
          "label": "Button Text"
        }
      ]
    },
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "video",
          "id": "source",
          "label": "A Shopify-hosted video"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        },
        {
          "id": "inverted",
          "type": "checkbox",
          "label": "Inverted?"
        },
        {
          "id": "cta_url",
          "type": "url",
          "label": "Button Url"
        },
        {
          "id": "cta_text",
          "type": "text",
          "label": "Button Text"
        }
      ]
    },
    {
      "type": "youtube",
      "name": "Youtube URL",
      "settings": [
        {
          "type": "video_url",
          "id": "source",
          "label": "Video URL",
          "accept": [
            "youtube"
          ]
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        },
        {
          "id": "inverted",
          "type": "checkbox",
          "label": "Inverted?"
        },
        {
          "id": "cta_url",
          "type": "url",
          "label": "Button Url"
        },
        {
          "id": "cta_text",
          "type": "text",
          "label": "Button Text"
        }
      ]
    }
  ]
}
{% endschema %}
