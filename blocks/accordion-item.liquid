<accordion-item>
    <accordion-label>
        {% content_for "block", type: "heading", id: "label" %}

        {% content_for "block", type: "icon", id: "icon" %}
    </accordion-label>
    <accordion-content>
        {% content_for "block", type: "paragraph", id: "content" %}
    </accordion-content>
</accordion-item>

