{
  "name": "Accordion Item",
  "tag": null,
  "blocks": [
    {
      "type": "heading"
    },
    {
      "type": "paragraph"
    },
    {
      "type": "icon"
    }
  ],
  "presets": [
    {
      "name": "Accordion Item",
      "blocks": [
        {
          "type": "heading",
          "id": "label",
          "static": true,
          "name": "Label",
          "settings": {
          },
          "blocks": {}
        },
        {
          "type": "paragraph",
          "id": "content",
          "static": true,
          "name": "Content",
          "settings": {
          },
          "blocks": {}
        },
        {
          "type": "icon",
          "id": "icon",
          "static": true,
          "name": "Icon",
          "settings": {
            "src": "shopify://shop_images/chevron-down.svg",
            "size": 12
          },
          "blocks": {}
        }
      ]
    }
  ]
}
