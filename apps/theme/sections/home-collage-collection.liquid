<style>

    .collage_container {
        display: flex;
        gap: 20px;
        margin: 0 0 32px;
    }

    .small_column .collage_card img {
        height: 240px;
        width: 100%;
        object-fit: cover;
    }

    .small_column {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    .collage_card {
        position: relative;
        border-radius: 8px;
        overflow: hidden;
    }

    .collage_card .card_content {
        position: absolute;
        bottom: 0;
        border-radius: 8px;
        background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0.00) 100%);
        width: 100%;
        padding: 16px;
        color: #fff;
        display: flex;
        flex-direction: column;
        gap: 4px

    }

    .collage_card .card_content p {
        color: #fff;
        font-size: 14px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .collage_card .card_content strong {
        font-size: 24px;
        font-weight: 600;
        display: block;
    }

    .big_column .collage_card .card_content strong {
        font-size: 32px;
    }

    .collage_card img {
        height: 100%;
        -webkit-transition: all 0.5s ease;
        transition: all 0.5s ease;
        transform: scale(1);
        width: 100%;
    }

    .collage_card:hover img {
        transform: scale(1.2)
    }

    .collage_card a {
        display: block;
    }

    .big_column .collage_card img {
        height: 512px;
    }

    .big_column .collage_card .card_content {
        bottom: auto;
        top: 0;
        background-image: linear-gradient(180deg, rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0.00) 100%);
        padding: 24px;
        gap: 8px;
    }

    .collage_container > div {
        width: 50%;
    }

    .section-header {
        margin: 0 0 40px
    }

    .section-header .text-xl {
        line-height: 125%
    }

    @media (max-width: 767px) {
        .section-header {
            margin: 0 0 16px;
            padding-right: 20px
        }

        .section-header .text-xl {
            font-size: 24px !important;
        }

        .collage_card .card_content {
            padding: 12px
        }

        .collage_card .card_content strong {
            font-size: 20px !important;
        }

        .collage_card .card_content p {
            font-size: 12px;
        }

        .small_column .collage_card img {
            height: 160px
        }

        .collage_container {
            flex-direction: column;
            gap: 20px
        }

        .collage_container > div {
            width: 100%;
            gap: 20px
        }

        .big_column .collage_card img {
            height: 343px;
            width: 100%;
            object-fit: cover;
        }

        .big_column .collage_card .card_content {
            gap: 4px;
            padding: 12px;
        }
    }
</style>
<div class="page-boundary">
    <div class="section-header justify-start">
        <h2 class="text-xl md:text-xxl text-left text-charade font-semibold">
            <span class="hidden md:inline">{{ section.settings.title }}</span>
            <span class="md:hidden">{{ section.settings.mobile_title }}</span>
        </h2>
    </div>
    <div class="collage_container">
        <div class="big_column">

            <div class="collage_card">
                <a href="{{ section.settings.col-link-left }}">
                    <img src="{{ section.settings.image-col-left | img_url: 'master' }}" />
                    <div class="card_content">
                        <strong>{{ section.settings.col-title-left }}</strong>
                        <p>{{ section.settings.col-text-left }}</p>
                    </div>
                </a>
            </div>

        </div>
        <div class="small_column">
            {% for block in section.blocks %}
                <div class="collage_card">
                    <a href="{{ block.settings.col-link-right }}">
                        <img src="{{ block.settings.image-col-right | img_url: 'master' }}">
                        <div class="card_content">
                            <strong>{{ block.settings.col-title-right }}</strong>
                            <p>{{ block.settings.col-text-right }}</p>

                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% schema %}
{
  "name": "Home Collage Collection",
  "class": "section-container",
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "Title"
    },
    {
      "id": "mobile_title",
      "type": "text",
      "label": "Mobile Title"
    },
    {
      "type": "image_picker",
      "id": "image-col-left",
      "label": "Collage Image"
    },
    {
      "type": "text",
      "id": "col-title-left",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "richtext",
      "id": "col-text-left",
      "label": "Description",
      "default": "<p>Add your description here</p>"
    },
    {
      "type": "url",
      "id": "col-link-left",
      "label": "link",
      "info": "Optional"
    }
  ],
  "blocks": [
    {
      "type": "right_section",
      "name": "Right Section",
      "settings": [
        {
          "type": "image_picker",
          "id": "image-col-right",
          "label": "Collection Image Right"
        },
        {
          "type": "text",
          "id": "col-title-right",
          "label": "Heading",
          "default": "Section Heading"
        },
        {
          "type": "richtext",
          "id": "col-text-right",
          "label": "Description",
          "default": "<p>Add your description here</p>"
        },
        {
          "type": "url",
          "id": "col-link-right",
          "label": "link",
          "info": "Optional"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Collage Collection"
    }
  ]
}
{% endschema %}

