         </div>
      </div>
      </div>
      <div class="countdown-container">{% if section.settings.show_countdown_timer %}
          <countdown-timer class="hidden md:block sm" :targetDate="{{ settings.sale_timer }}"></countdown-timer>
          <countdown-timer class="md:hidden" :minimal="true" :targetDate="{{ settings.sale_timer }}"></countdown-timer>
        {% endif %}</div>


      <div class="anno-cta btn btn--plain btn--sm hidden">
        {{ section.settings.cta_btn_text }}
      </div>
    </div>
  </div>

</a>
<lazy-script src="{{ 'announcement-bar.js' | asset_url }}"></lazy-script>
{% schema %}
{
  "name": "Quick Announcement Bar",
  "class": "announcement-bar-wrapper",
  "blocks": [
    {
      "type": "announcement_content",
      "name": "Announcement Content",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Announcement Content"
        },
        {
          "id": "tooltip",
          "type": "text",
          "label": "Announcement Tooltip"
        }
      ]
    }
  ],
  "settings": [
    {
      "id": "cta_btn_text",
      "type": "text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Announcement Link"
    },
    {
      "type": "color",
      "id": "color_bg",
      "label": "Bar",
      "default": "#1c1d1d"
    },
    {
      "type": "color",
      "id": "color_text",
      "label": "Text",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_countdown_timer",
      "label": "Show Countdown Timer",
      "default": false
    }
  ]
}
{% endschema %}

