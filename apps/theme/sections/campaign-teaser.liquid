<link rel="stylesheet" href="{{ 'campaign-teaser.css' | asset_url }}" />

<section class="campaign-teaser" style="--bgcolor: {{ section.settings.bgcolor }}; --text-color: {{section.settings.color}};">
  <div class="md:text-md">
    {% render 'rtf-viewer', content: section.settings.content %}
  </div>
</section>

{% schema %}
{
  "name": "Campaign Teaser",
  "class": "hide-until-initialized",
  "settings": [
    {
      "id": "content",
      "type": "richtext",
      "label": "Content"
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Color",
      "default": "#1c1d1d"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_countdown_timer",
      "label": "Show Countdown Timer",
      "default": false
    }
  ]
}
{% endschema %}
