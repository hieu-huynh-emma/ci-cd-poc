        },
        {
          "type": "image_picker",
          "id": "badge",
          "label": "Affiliate Badge"
        },
        {
          "type": "richtext",
          "id": "message",
          "label": "Affiliate Message"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    }
  ]
}
