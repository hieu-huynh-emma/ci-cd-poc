<style>
    #splash-screen {
        position: fixed;
        top: 0;
        left: 0;
        z-index: 999999;

        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;

        background-color: rgba(255, 255, 255, 0.98);

        transition: opacity 500ms ease-in-out;
    }
</style>
<div id="splash-screen">
  {{ section.settings.animated_media | image_url: width: 200 | image_tag: width: 200, fetchpriority: 'high' }}

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const splashscreenEl = document.querySelector("#splash-screen");

      splashscreenEl.style.opacity = "0";

      setTimeout(() => {
        splashscreenEl.style.display = "none";
      }, 500);

    });
  </script>
</div>


{% schema %}
{
  "name": "Splash Screen",
  "settings": [
    {
      "id": "animated_media",
      "type": "image_picker",
      "label": "Animated Media"
    }
  ]
}
{% endschema %}
