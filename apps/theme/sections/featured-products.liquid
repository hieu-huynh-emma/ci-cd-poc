                                    {% liquid
                                        if product.id == 7829461794954
                                            assign productId = 7741865164938
                                        else
                                            assign productId = block.settings.product.id
                                        endif
                                    %}
                                    <product-star-rating :productId="{{ productId }}"></product-star-rating>
                                </div>
                            {% endif %}
