<footer class="footer emma-footer">
    <div class="emma-footer__top">
        <div class="emma-footer__top__item">
            <div class='emma-footer__logo'>
                <img src='{{ 'emma-logo.svg' | asset_url }}' alt='' width="120px" height='24px' loading="lazy"/>
            </div>

            <h6 class="emma-footer__heading">
                Join our newsletter
            </h6>
            <div class="emma-footer__top__item__content">
                {%- form 'customer', id: 'ContactFooter', class: 'emma-newsletter' -%}
                <div>
                    <input type="hidden" name="contact[tags]" value="newsletter">
                    <div>
                        <div class="field emma-newsletter__field">
                            <input id="NewsletterForm--{{ section.id }}" type="email" name="contact[email]"
                                   class="emma-field__input text-charade" value="{{ form.email }}" aria-required="true"
                                   autocorrect="off" autocapitalize="off" autocomplete="email" {% if form.errors %}
                                autofocus aria-invalid="true" aria-describedby="ContactFooter-error" {% elsif
                                    form.posted_successfully? %} aria-describedby="ContactFooter-success" {% endif %}
                                   placeholder="Your email" required>
                            <button type="submit" class="field__button emma-newsletter__button px-5" name="commit"
                                    id="Subscribe" aria-label="{{ 'newsletter.button_label' | t }}">
                                <img src='{{ 'subscribe-email.svg' | asset_url }}' alt='' width='16' height="16" loading="lazy"/> Subscribe
                            </button>
                        </div>
                        {%- if form.errors -%}
                            <small class="newsletter-form__message form__message" id="ContactFooter-error">{% render
                                        'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{
                                form.errors.messages['email'] }}</small>
                        {%- endif -%}
                    </div>
                    {%- if form.posted_successfully? -%}
                        <h3 class="newsletter-form__message newsletter-form__message--success form__message"
                            id="ContactFooter-success" tabindex="-1" autofocus>{% render 'icon-success' %}{{
                            'newsletter.success' | t }}</h3>
                    {%- endif -%}
                </div>
                <div class="emma-newsletter__checkbox">
                    <input type="checkbox" id="ContactFooterCheckbox" name="customer[accepts_marketing]"
                           value="privacypolicy" checked>
                    <label for="ContactFooterCheckbox" class="emma-footer__link"> Yes, I would like to receive
                        newsletters, and I have read and
                        accepted the <a href="/pages/privacy-policy">privacy
                            policy.</a></label>
                </div>

                {% comment %} <div><a href="#" class="emma-text--white emma-link--small">How do I unsubscribe?</a></div>
                {% endcomment %}
                <div class="emma-footer__link">The email address will naturally be cared for according to our strict <a
                            href="/pages/privacy-policy">privacy policy.</a></div>
           
            {%- endform -%}
             </div>
        </div>

        <div class="emma-footer__customer-support emma-footer__navigation__item">
            <h6 class="emma-footer__heading">
                Customer Support
            </h6>
            <ul class="emma-footer__navigation__links">
                <li><p class="text-white italic">Available from 08:00 to 18:00 GMT-6, Monday-Friday</p></li>
                <li><img src="{{ 'phone.svg' | asset_url }}" width="20" height="20" loading="lazy"/><a href="tel:+1 (844) 906 3662">1 1 (844) 906 3662
                        </a></li>
                <li><img src="{{ 'support-email.svg' | asset_url }}" width="20" height="20" loading="lazy"/><a
                            href="mailto:{{ shop.email }}">{{ shop.email }}</a></li>

            </ul>
        </div>

        <div class="emma-footer__follow-us emma-footer__top__item">
            <h6 class="emma-footer__heading">
                Follow Us
            </h6>
            <div class="emma-footer__top__item__content emma-footer__top__item__content--padded">
                <ul class="emma-footer__top__socials">
                    <li><a href="https://www.facebook.com/EmmaSleepCanada/" class="emma-footer__link--with-image"
                        ><img src="{{ 'icon-facebook.svg' | asset_url }}" loading="lazy" width="16"
                              height="16"/></a></li>
                    <li><a href="https://www.instagram.com/emmasleep.canada/" class="emma-footer__link--with-image"
                        ><img src="{{ 'icon-instagram.svg' | asset_url }}" loading="lazy" width="16"
                              height="16"/></a></li>
                 
                </ul>
            </div>
        </div>


    </div>

    <div class="emma-footer__navigation">
       {%- assign footer_linklist = section.settings.footer_main_menu -%}
        <div class="hidden md:flex emma-footer__navigation-container">
            {% for link in linklists[footer_linklist].links %}
              <div class="emma-footer__navigation__item">
                <h6 class="emma-footer__heading">
                  {{ link.title }}
                </h6>
                <ul class="emma-footer__navigation__links">
                  {% for childlink in link.links %}
                    <li><a href="{{ childlink.url }}">{{ childlink.title }}</a></li>
                  {% endfor %}
              </ul>
              </div>
            {% endfor %}
        </div>
        <div class="block md:hidden emma-footer__navigation-container-mobile">
          {% for link in linklists[footer_linklist].links %}
            <div class="emma-footer__navigation__item-mobile">
              <h4 class="text-white emma-footer__heading-mobile">
                {{ link.title }}
              </h4>
              {% for childlink in link.links %}
                <div class="hidden emma-footer__navigation__links-mobile">
                  <a href="{{ childlink.url }}">{{ childlink.title }}</a>
                </div>
              {% endfor %}
            </div>
          {% endfor %}
        </div>
    </div>

    <div class="emma-footer__copyright">
        <small class="emma-copyright__content">&copy; {{ 'now' | date: "%Y" }}</small>
        <small class="emma-copyright__content">
            <a href="/pages/legal-notice">Legal Notice</a>
        </small>

        <small class="emma-copyright__content">
            <a href="/pages/privacy-policy">Privacy Policy</a>
        </small>

        <small class="emma-copyright__content">
            <a href="/pages/terms-and-conditions">Terms and Conditions</a>
        </small>
    </div>

</footer>

<script>
  $(document).ready(function () {
    $(".emma-footer__navigation-container-mobile .emma-footer__heading-mobile").click(function (e) {
      const $title = $(this);
      const $item = $(this).parent();
      if ($title.hasClass("open")) {
        $item.find(".emma-footer__navigation__links-mobile").slideUp();
        $title.toggleClass("open", false);
      } else {
        $item.parent().find(".emma-footer__navigation__links-mobile").slideUp();
        $item
          .parent()
          .find(".emma-footer__heading-mobile")
          .toggleClass("open", false);
        $item.find(".emma-footer__navigation__links-mobile").slideDown();
        $title.toggleClass("open", true);
      }
    });
  });
</script>

{% javascript %}
class LocalizationForm extends HTMLElement {
constructor() {
super();
this.elements = {
input: this.querySelector('input[name="locale_code"], input[name="country_code"]'),
button: this.querySelector('button'),
panel: this.querySelector('ul'),
};
this.elements.button.addEventListener('click', this.openSelector.bind(this));
this.elements.button.addEventListener('focusout', this.closeSelector.bind(this));
this.addEventListener('keyup', this.onContainerKeyUp.bind(this));

this.querySelectorAll('a').forEach(item => item.addEventListener('click', this.onItemClick.bind(this)));
}

hidePanel() {
this.elements.button.setAttribute('aria-expanded', 'false');
this.elements.panel.setAttribute('hidden', true);
}

onContainerKeyUp(event) {
if (event.code.toUpperCase() !== 'ESCAPE') return;

this.hidePanel();
this.elements.button.focus();
}

onItemClick(event) {
event.preventDefault();
const form = this.querySelector('form');
this.elements.input.value = event.currentTarget.dataset.value;
if (form) form.submit();
}

openSelector() {
this.elements.button.focus();
this.elements.panel.toggleAttribute('hidden');
this.elements.button.setAttribute('aria-expanded', (this.elements.button.getAttribute('aria-expanded') ===
'false').toString());
}

closeSelector(event) {
const shouldClose = event.relatedTarget && event.relatedTarget.nodeName === 'BUTTON';
if (event.relatedTarget === null || shouldClose) {
this.hidePanel();
}
}
}

customElements.define('localization-form', LocalizationForm);
{% endjavascript %}

