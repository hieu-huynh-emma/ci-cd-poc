{% assign badges = section.blocks | where: 'type', 'badge' %}

<div class="product-badges">
  {% for badge in badges %}
    <div class="product-badge">
      {{ badge.settings.photo | image_url: height: 108 | image_tag }}
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Product Badges",
  "class": "hidden",
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Name"
        },
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Photo"
        }
      ]
    }
  ],
  "settings": [
    {
      "id": "caption_headline",
      "type": "text",
      "label": "Headline"
    },
    {
      "type": "textarea",
      "id": "caption_content",
      "label": "Content"
    }
  ]
}
{% endschema %}
