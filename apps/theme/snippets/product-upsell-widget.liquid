{% assign blockImg = settings.image | image_url: width: 500 %}
{% assign coverImg = settings.product.featured_image | image_url: width: 450 %}


<product-auxiliary
  class="hidden"
  name="upsell-widget"
  type="widget"
  id="up-selling-addon-{{ product.handle }}"
  :eventName="up_selling"

>
  <script type="application/json">{{ product | json }}</script>
  <a href="{{ settings.product }}">
    {% assign product = settings.product %}
    <div class="auxiliary-container">
      
      <div class="self-center">
        <img
          class="mx-auto h-auto"
          src="{{ blockImg | default: settings.product.metafields.accentuate.featured_image[0].src | default: coverImg }}"
          alt=""
          width="100"
          height="57"
        >
      </div>
      <div class="product-details">
        <div class="product-content">
          <p class="text-sm font-semibold">{{ settings.title }}</p>
          <div class="text-sm">
            {% render 'rtf-viewer', content: settings.content %}
          </div>
        </div>
        <p class="product-price-container ">
          {% if settings.product.compare_at_price > settings.product.price %}
            From
          {% endif %}
          <span class="text-scarlet font-bold">{{ settings.product.price | money }}</span>
          
          {% if settings.product.compare_at_price > settings.product.price %}
            <del class="line-through text-xs">{{ settings.product.compare_at_price | money }}</del>
          {% endif %}
        </p>
      </div>
    </div>
  </a>
</product-auxiliary>
