{% if isOptimized == true %}
    <link is="delay-stylesheet" href="{{ 'base.css' | asset_url }}">
    <link is="delay-stylesheet" href="{{ 'global.css' | asset_url }}">
    <link is="delay-stylesheet" href="{{ 'typography.css' | asset_url }}">
    <link is="delay-stylesheet" href="{{ 'fonts.css' | asset_url }}">

    {% liquid
        case template
            when 'page.compare-emma'
                assign pageStyleFile = 'comparison-page.css'
            when 'page.competitor-comparison'
                assign pageStyleFile = 'competitor-comparison.css'
            when 'page.financing'
                assign pageStyleFile = 'financing.css'
            when 'page.landing-page'
                assign pageStyleFile = 'landing-page.css'
            when 'page' or 'page.365-night-trial' or 'page.100-day-moneyback' or 'page.legal-notice'
                assign pageStyleFile = 'static-page.css'
            else
               assign pageStyleFile = 'revamp-product.css'
        endcase
    %}

    {% if pageStyleFile %}
        <link is="delay-stylesheet" href="{{ pageStyleFile | asset_url }}">
    {% endif %}


    <link is="delay-stylesheet" href="{{ 'tailwind.css' | asset_url }}">

    {% liquid
        assign vendorStylesheet = "vendors.css"
        case template
            when 'page.landing-page' or 'product.new-original-mattress' or 'product.climax-hybrid-mattress' or 'product.emma-hybrid-comfort' or 'product.hybrid-comfort-bundle'
                assign vendorStylesheet = "old-vendors.css"
        endcase
    %}

    <link is="delay-stylesheet" id="vendor-custom-styles" href="{{ vendorStylesheet | asset_url }}">
    <link is="delay-stylesheet" href="{{ 'jquery.fancybox.css' | asset_url }}">

    <style>
        .unintrusive-bg {
            pointer-events: none;
        }
        .unintrusive-bg *:not(div):not(section) {
            pointer-events: auto;
        }
    </style>

{% else %}
    {% render 'old-page-styles' %}
{% endif %}

