<!-- Basic page needs ================================================== -->
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

{% if template contains 'product' %}
	{% assign variant_meta_title = product.selected_or_first_available_variant.metafields.accentuate.meta_title %}
	{% assign variant_meta_desc = product.selected_or_first_available_variant.metafields.accentuate.meta_description %}
	{% assign variant_canonical_url = product.selected_or_first_available_variant.metafields.accentuate.url %}
	
	{% assign defaultProductUrl = '/products/' | append: handle %}
	{% assign routeParams = request.path | remove: defaultProductUrl | split: "/" %}
	
	{% if routeParams != empty %}
		
		{% for routeParam in routeParams %}
			{% if routeParam contains '-size' %}
				{% assign variantSizeParam = routeParam | remove: "-size" %}
			{% endif %}
		{% endfor %}
		
		{% assign shopifySelectedVariantSize = product.selected_or_first_available_variant.title | split: "|" | first | downcase | handleize %}
		
		{% if variantSizeParam and shopifySelectedVariantSize != variantSizeParam %}
			{%- for variant in product.variants -%}
				{% assign plainSize = variant.title | split: "|" | first | downcase | handleize %}
				
				{% if plainSize == variantSizeParam %}
					{% assign manualSelectedVariant = variant %}
				{% endif %}
			
			{% endfor %}
			
			{% assign variant_meta_title = manualSelectedVariant.metafields.accentuate.meta_title | default: variant_meta_title %}
			{% assign variant_meta_desc = manualSelectedVariant.metafields.accentuate.meta_description | default: variant_meta_desc %}
			{% assign variant_canonical_url = manualSelectedVariant.metafields.accentuate.url | default: variant_canonical_url %}
			
			<script>
        const selectedVariantId = +`{{ manualSelectedVariant.id }}`;

        if (!!selectedVariantId) window.location.href = window.location.href + "?variant=" + selectedVariantId;
			</script>
		{% endif %}
	{% endif %}
{% endif %}

{% include 'title-and-desc-meta-tags', variant_meta_title: variant_meta_title, variant_meta_desc: variant_meta_desc %}
{% include 'canonical-meta-tag', variant_canonical_url: variant_canonical_url %}
{% include 'social-meta-tags' %}



