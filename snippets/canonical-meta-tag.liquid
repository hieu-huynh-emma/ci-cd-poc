{% if template contains 'product' and product.has_only_default_variant == false %}
	{% comment %}
	{% if canonical_url contains '/products/' %}
		{% assign c_url = canonical_url | split:'/' | size %}
		{% if c_url > 5 %}
			<meta name="robots" content="noindex,nofollow">
		{% endif %}
	{% endif %}
	{% endcomment %}
	
	{% if variant_canonical_url %}
		<link rel="canonical" href="{{ variant_canonical_url }}">
	{% else %}
		<link
			rel="canonical"
			href="{{ canonical_url }}/{{ product.selected_or_first_available_variant.title | split: '|' | first | handleize }}-size"
		>
	{% endif %}

{% else %}

{% endif %}
