      assign pageStylesheet = 'product-detail.css'
    when 'product.ready-to-sleep', 'product.sleep-essential-bundle'
      assign pageStylesheet = 'bundle-detail.css'
  endcase
%}

<link rel="stylesheet" href="{{ pageStylesheet | asset_url }}">

