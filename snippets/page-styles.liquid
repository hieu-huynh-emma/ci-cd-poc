{% if isOptimized == true %}
	<!-- CSS ================================================== -->
	<link is="delay-stylesheet" href="{{ 'timber.css' | asset_url }}">
	<link is="delay-stylesheet" href="{{ 'theme.css' | asset_url }}">
	<!-- CUSTOM CSS ================================================== -->
	<link is="delay-stylesheet" href="{{ 'custom-theme.css' | asset_url }}">
	<link is="delay-stylesheet" href="{{ 'custom.css' | asset_url }}">
	<link is="delay-stylesheet" href="{{ 'custom-theme-3.css' | asset_url }}">

	<link is="delay-stylesheet" href="{{ 'base.css' | asset_url }}">
	<link is="delay-stylesheet" href="{{ 'legacy.css' | asset_url }}">
	<link is="delay-stylesheet" href="{{ 'typography.css' | asset_url }}">
	<link is="delay-stylesheet" href="{{ 'select2.min.css' | asset_url }}">
	<link is="delay-stylesheet" href="{{ 'vendors.css' | asset_url }}">
	<link is="delay-stylesheet" href="{{ 'global.css' | asset_url }}">
	<link is="delay-stylesheet" href="{{ 'fonts.css' | asset_url }}">

    <link is="delay-stylesheet" href="{{ 'new-heading.css' | asset_url }}">
			

	{% liquid
		assign pageStylesheet = ""
		case template
			when 'page.comparison'
				assign pageStylesheet = 'comparison-page.css'
			when 'page.competitor-comparison'
				assign pageStylesheet = 'competitor-comparison.css'
			when 'product.emma-climax-hybrid', 'product.emma-hybrid-pro'
				assign pageStylesheet = 'product-detail.css'
			when 'product.ready-to-sleep', 'product.sleep-essential-bundle'
				assign pageStylesheet = 'bundle-detail.css'
		endcase
	%}
	<link is="delay-stylesheet" href="{{ pageStyleFile | asset_url }}">

	<link is="delay-stylesheet" href="{{ 'tailwind.css' | asset_url }}">
{% else %}
	{% render 'old-page-styles' %}
{% endif %}
